<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>New Wiki</h1>

      <form action="/wikis/create" method="post">
        <div class="form-group">
          <label for="title">Wiki title</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="body">Body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter Body"></textarea>
        </div>
        <% if (currentUser && (currentUser.isAdmin() || currentUser.isPremium())) { %>
       <div class="row">
         <label for="switch-2" class="mdl-switch mdl-js-switch mdl-js-ripple-effect">
           <input type="checkbox" id="switch-2" class="mdl-switch__input" name="private" value="true">
           <span class="mdl-switch__label">Private</span>
         </label>
       </div>
     <% } %>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
