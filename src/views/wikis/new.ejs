<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>New Wiki</h1>

      <form action="/wikis/create" method="post">
        <div class="form-group">
          <label for="title">Wiki title</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="body">Body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter Body"></textarea>
        </div>
        <% if(currentUser.role == 'premium' || currentUser.role == 'admin'){ %>
          <div class="form-group">
            <label for="private">Will this be a private wiki?</label>
            <select class="form-control" name="private">
              <option value='true'>Yes, please make it Private</option>
              <option selected value='false'>No, please make it Public</option>
            </select>
          </div>
        <% } else { %>
          <div class="form-group">
            <label for="private">Will this be a private wiki?</label>
            <select class="form-control" name="private">

              <option selected value='false'>No, please make it Public</option>
            </select>
          </div>
            <% } %>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
